<div class="col">
    <div class="card " style="width: 18rem;">
        <img src="{{this.image}}" class="card-img-top" alt="{{this.author}}">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.author}}</p>
            <p class="card-text">{{this.description}}</p>
            {{#if this.borrowBy}}
                <button type="button" class="btn btn-secondary"
                    data-bs-toggle="popover" data-bs-placement="right"
                    data-bs-custom-class="custom-popover"
                    data-bs-title="ERROR!"
                    data-bs-content="This book cannot be borrowed because it is on loan.">
                    On Loan
                </button>
            {{else}}
                <a href="/borrow/{{this._id}}" class="btn btn-primary">Borrow</a>
            {{/if}}
        </div>
    </div>
</div> 