<body>   
   {{!-- navbar --}}
    {{> navbar }}

<br>

<main class="container">
    <h1>Books in Library</h1>
    <h3>Here a list of books</h3>
    {{!-- cards --}}
    <section class="row  g-4 mt-3 mb-3">
        {{#if user}}
            {{#each books}}
                {{> card-log }}
            {{/each}}
        {{else}}
            {{#each books}}
                {{> cards }}
            {{/each}}
        {{/if}}
    </section> 
</main> 
